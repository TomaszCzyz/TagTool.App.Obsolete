<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:TagTool.App.Helpers"
             x:Class="TagTool.App.Views.HighlightedTextView"
             x:DataType="helpers:ViewListItem">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>
        <Label Text="{Binding Text}" FontAttributes="Bold" />
        <Label Grid.Column="1" Text="{Binding Score}" HorizontalTextAlignment="End" />
    </Grid>
</ContentView>
